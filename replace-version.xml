<?xml version="1.0"?>

<!-- Usage: ant -f replace-version.xml -->
<project name="replace-version" default="main">

	<target name="main">

		<replace dir="${basedir}" summary="true">
			<include name="**/*pom.xml"/>
			<replacetoken><![CDATA[version>2.2.0-SNAPSHOT</]]></replacetoken>
			<replacevalue><![CDATA[version>2.2.1-SNAPSHOT</]]></replacevalue>
		</replace>

		<replace dir="${basedir}" summary="true">
			<include name="LICENSE.md"/>
			<replacetoken><![CDATA[Copyright &copy; 2022-2023, Rick O'Sullivan;]]></replacetoken>
			<replacevalue><![CDATA[Copyright &copy; 2022-2024, Rick O'Sullivan;]]></replacevalue>
		</replace>

		<replace dir="${basedir}" summary="true">
			<include name="**/sql-*-h2db.sh"/>
			<replacetoken><![CDATA[/com/h2database/h2/2.2.220/h2-2.2.220.jar]]></replacetoken>
			<replacevalue><![CDATA[/com/h2database/h2/2.2.224/h2-2.2.224.jar]]></replacevalue>
		</replace>

		<replace dir="${basedir}" summary="true">
			<include name="**/sql-*-h2db.sh"/>
			<replacetoken><![CDATA[/org/postgresql/postgresql/42.6.0/postgresql-42.6.0.jar]]></replacetoken>
			<replacevalue><![CDATA[/org/postgresql/postgresql/42.7.1/postgresql-42.7.1.jar]]></replacevalue>
		</replace>

		<replace dir="${basedir}" summary="true">
			<include name="**/CreateToplevelXJBindings.sh"/>
			<replacetoken><![CDATA[BASICJAXB_VERSION="2.1.1"]]></replacetoken>
			<replacevalue><![CDATA[BASICJAXB_VERSION="2.2.0"]]></replacevalue>
		</replace>

	</target>

</project>
